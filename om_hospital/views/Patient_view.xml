<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Patient  Name"/>
                <field name="ref"/>
                <field name="age" avg="Average Age"/>
                <field name="appointement_count" sum="Total Appointement"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h4>
                            <field name="ref" readonly="1"/>
                        </h4>
                        <h2>
                            <label for="name" string="Name" class="oe_edit_only"/>
                            <field name="name" />
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="date_of_birth"/>
                            <field name="age"/>
                            <field name="appointement_id"/>
                            <field name="appointement_count"/>
                            <field name="appointement_ids"/>
                        </group>
                        <group>
                            <field name="ref"/>
                            <field name="gender" widget="radio"/>
                            <field name="tag_ids" widget="many2many_tags"  options="{'color_field' : 'color'} " />
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Other Information " name="Other_info">
                            <field name="parent"  invisible="age > 18"/>
                            <field name="marital_status" />
                            <field name="partner_name" required="marital_status == 'married'"  readonly="marital_status != 'married'"/>
                        </group>
                    </group>
                </sheet>
                 <div class="oe_chatter">
                      <field name="message_follower_ids" groups="base.group_user"/>
                      <field name="message_ids"/>
                 </div>
            </form>
        </field>
    </record>


    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Patient  Name"
                       filter_domain="[ '|',('name', 'ilike', self), ('ref', 'ilike', self)]"/>
                <field name="ref"/>
                <field name="age"/>
                <field name="gender"/>
                <filter name="male_filter" string="Male" domain="[('gender','=','male')]"/>
                <filter name="filter_female" string="Female" domain="[('gender','=','female')]"/>
                <separator/>
<!--                <filter name="filter_kids" string="kids" domain="[('age','&lt;=',5)]"/>-->
                <filter name="filter_archived" string="Archived" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_Gender" string="Gender" domain="[]" context="{'group_by': 'gender'}"/>
                </group>
                <searchpanel>

                        <field name="gender" select='multi' enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_Group_by_gender':1,'search_default_male_filter':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient !
            </p>
        </field>
    </record>
</odoo>
